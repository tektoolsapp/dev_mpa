{% extends 'templates/app.twig' %}

{% block content %}

    <div class="row">

        <div class="col-md-6 col-md-offset-3">

            <div class="panel panel-default">

                <div class="panel-heading">Add New Member</div>

                <div class="panel-body">

                    <form action="{{ path_for('members.update') }}" method="post" autocomplete="off">

                        <div class="form-group">

                            <label for="name">Name</label>

                            <input type="text" name="name" id="name" value="" class="form-control">

                        </div>

                        <div class="form-group">

                            <label for="type">Member Type:</label>

                            <select class="form-control" name="type" id="type">

                                <option value="N">Select a Type</option>
                                <option value="P">Plumber</option>
                                <option value="A">Other</option>

                            </select>

                        </div>

                        <div class="form-group">

                            <label for="address">Address</label>

                            <input type="text" name="address" id="address" class="form-control">

                        </div>

                        <div class="form-group">

                            <label for="suburb">Suburb</label>

                            <input type="text" name="suburb" id="suburb" class="form-control">

                        </div>

                        <button type="submit" class="btn btn-default">Add Member</button>

                        {{ csrf.field | raw}}

                    </form>

                </div>

            </div>

        </div>

    </div>

{% endblock %}