{% extends 'templates/app.twig' %}

{% block content %}

    {#{  errors | json_encode }#}
    {#{  member | json_encode }#}
    {#{ contacts | json_encode }#}
    {#{  activity_types | json_encode }#}
    {#{  old | json_encode }#}
