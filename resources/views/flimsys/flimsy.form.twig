{% extends 'templates/app.twig' %}
{% block content %}
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-default">
                <div class="panel-heading">New Flimsy Request</div>
                <div class="panel-body">
                    {#<form action="" method="post" autocomplete="off" enctype="multipart/form-data">#}
                    <form action="" id="member_update" method="post" autocomplete="off">

                        <div class="panel panel-default">
                            <div class="panel-body-header-app">CUSTOMER DETAILS</div>
                        </div>

                        <div class="row">
                        {# BUSINESS NAME #}
                            {% set var_business_name = old.business_name is defined ? old.business_name : member.business_name %}
                            <div class="col-xs-6">
                                <div class="form-group{{ errors.business_name ? ' has-error' : '' }} required">
                                    <label class="control-label" for="business_name">Business/Trading Name</label>
                                    <input type="text" name="business_name" class="form-control" value="{{ var_business_name }}">
                                    {% if errors.business_name %}
                                        <span class="help-block">{{ errors.business_name | first }}</span>
                                    {% endif %}
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            {# BUSINESS ADDRESS #}
                            {% set var_business_name = old.business_name is defined ? old.business_name : member.business_name %}
                            <div class="col-xs-5">
                                <div class="form-group{{ errors.business_name ? ' has-error' : '' }} required">
                                    <label class="control-label" for="business_name">Street Address</label>
                                    <input type="text" name="business_name" class="form-control" value="{{ var_business_name }}">
                                    {% if errors.business_name %}
                                        <span class="help-block">{{ errors.business_name | first }}</span>
                                    {% endif %}
                                </div>
                            </div>
                            {# BUSINESS SUBURB #}
                            <div class="col-xs-3">
                                <div class="form-group{{ errors.business_name ? ' has-error' : '' }} required">
                                    <label class="control-label" for="business_name">Suburb</label>
                                    <input type="text" name="business_name" class="form-control" value="{{ var_business_name }}">
                                    {% if errors.business_name %}
                                        <span class="help-block">{{ errors.business_name | first }}</span>
                                    {% endif %}
                                </div>
                            </div>
                            {# BUSINESS POSTCODE #}
                            <div class="col-xs-2">
                                <div class="form-group{{ errors.business_name ? ' has-error' : '' }} required">
                                    <label class="control-label" for="business_name">Post Code</label>
                                    <input type="text" name="business_name" class="form-control" value="{{ var_business_name }}">
                                    {% if errors.business_name %}
                                        <span class="help-block">{{ errors.business_name | first }}</span>
                                    {% endif %}
                                </div>
                            </div>
                            {# BUSINESS STATE #}
                            <div class="col-xs-2">
                                <div class="form-group{{ errors.business_name ? ' has-error' : '' }} required">
                                    <label class="control-label" for="business_name">State</label>
                                    <input type="text" name="business_name" class="form-control" value="{{ var_business_name }}">
                                    {% if errors.business_name %}
                                        <span class="help-block">{{ errors.business_name | first }}</span>
                                    {% endif %}
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-xs-3">
                                {# BUSINESS CONTACT #}
                                {% set var_business_type = old.business_type is defined ? old.business_type : member.business_type %}
                                <div class="form-group{{ errors.type ? ' has-error' : '' }}">
                                    <label for="business_type">Ordered By:</label>
                                    <select class="form-control" name="business_type" id="business_type">
                                        <option value="N" {% if var_business_type == 'N' %} selected="selected"{% endif %}>Select a Contact</option>
                                        <option value="B" {% if var_business_type == 'B' %} selected="selected"{% endif %}>Business</option>
                                        <option value="I" {% if var_business_type == 'I' %} selected="selected"{% endif %}>Individual</option>
                                    </select>
                                    {% if errors.business_type %}
                                        <span class="help-block">{{ errors.business_type | first }}</span>
                                    {% endif %}
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            {# ORDERED BY FIRST NAME #}
                            {% set var_business_name = old.business_name is defined ? old.business_name : member.business_name %}
                            <div class="col-xs-3">
                                <div class="form-group{{ errors.business_name ? ' has-error' : '' }} required">
                                    <label class="control-label" for="business_name">First Name</label>
                                    <input type="text" name="business_name" class="form-control" value="{{ var_business_name }}">
                                    {% if errors.business_name %}
                                        <span class="help-block">{{ errors.business_name | first }}</span>
                                    {% endif %}
                                </div>
                            </div>
                            {# ORDERED BY SURNAME #}
                            <div class="col-xs-3">
                                <div class="form-group{{ errors.business_name ? ' has-error' : '' }} required">
                                    <label class="control-label" for="business_name">Surname</label>
                                    <input type="text" name="business_name" class="form-control" value="{{ var_business_name }}">
                                    {% if errors.business_name %}
                                        <span class="help-block">{{ errors.business_name | first }}</span>
                                    {% endif %}
                                </div>
                            </div>
                            {# ORDERED BY PHONE #}
                            <div class="col-xs-2">
                                <div class="form-group{{ errors.business_name ? ' has-error' : '' }} required">
                                    <label class="control-label" for="business_name">Phone</label>
                                    <input type="text" name="business_name" class="form-control" value="{{ var_business_name }}">
                                    {% if errors.business_name %}
                                        <span class="help-block">{{ errors.business_name | first }}</span>
                                    {% endif %}
                                </div>
                            </div>
                            {# ORDERED BY EMAIL #}
                            <div class="col-xs-4">
                                <div class="form-group{{ errors.business_name ? ' has-error' : '' }} required">
                                    <label class="control-label" for="business_name">Email</label>
                                    <input type="text" name="business_name" class="form-control" value="{{ var_business_name }}">
                                    {% if errors.business_name %}
                                        <span class="help-block">{{ errors.business_name | first }}</span>
                                    {% endif %}
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            {# ORDERED BY ACCOUNTS EMAIL #}
                            <div class="col-xs-4">
                                <div class="form-group{{ errors.business_name ? ' has-error' : '' }} required">
                                    <label class="control-label" for="business_name">Accounts Email</label>
                                    <input type="text" name="business_name" class="form-control" value="{{ var_business_name }}">
                                    {% if errors.business_name %}
                                        <span class="help-block">{{ errors.business_name | first }}</span>
                                    {% endif %}
                                </div>
                            </div>
                        </div>

                        <div class="panel panel-default">
                            <div class="panel-body-header-app">FLIMSY ORDER DETAILS</div>
                        </div>

                        <div class="row">
                            {# FLIMSY PURCHASE ORDER # #}
                            <div class="col-xs-3">
                                <div class="form-group{{ errors.business_name ? ' has-error' : '' }} required">
                                    <label class="control-label" for="business_name">Purchase Order #</label>
                                    <input type="text" name="business_name" class="form-control" value="{{ var_business_name }}">
                                    {% if errors.business_name %}
                                        <span class="help-block">{{ errors.business_name | first }}</span>
                                    {% endif %}
                                </div>
                            </div>
                            {# FLIMSY ORDER TYPE # #}
                            <div class="col-xs-5">
                                <div class="form-group{{ errors.business_name ? ' has-error' : '' }} required">
                                    <label class="control-label" for="contact_journal">Order Type</label>
                                    <div id="filter_member_status">
                                        <label class="checkbox-inline"><input type="checkbox" name="status_current" value="C" > Flimsy</label>
                                        <label class="checkbox-inline"><input type="checkbox" name="status_unpaid" value="U" > Sewer Junction</label>
                                        <label class="checkbox-inline"><input type="checkbox" name="status_pending" value="P" > Water Main</label>
                                    </div>
                                </div>
                            </div>
                            {# FLIMSY CONTOURS # #}
                            <div class="col-xs-4">
                                <div class="form-group">
                                    <label class="control-label" for="contact_journal">Contours?</label>
                                    <div style="clear:both;"></div>
                                        <label class="radio-inline" for="Y" id="journal_label">
                                            <input type="radio" name="contact_journal" id="journal_y" value="Y" autocomplete="off"> Yes
                                        </label>
                                        <label class="radio-inline" for="N">
                                            <input type="radio" name="contact_journal" id="journal_n" value="N" autocomplete="off"> No
                                        </label>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            {# FLIMSY LOT NUM #}
                            <div class="col-xs-2">
                                <div class="form-group{{ errors.business_name ? ' has-error' : '' }} required">
                                    <label class="control-label" for="business_name">Lot #</label>
                                    <input type="text" name="business_name" class="form-control" value="{{ var_business_name }}">
                                    {% if errors.business_name %}
                                        <span class="help-block">{{ errors.business_name | first }}</span>
                                    {% endif %}
                                </div>
                            </div>
                            {# FLIMSY HOUSE NUM #}
                            <div class="col-xs-2">
                                <div class="form-group{{ errors.business_name ? ' has-error' : '' }} required">
                                    <label class="control-label" for="business_name">House #</label>
                                    <input type="text" name="business_name" class="form-control" value="{{ var_business_name }}">
                                    {% if errors.business_name %}
                                        <span class="help-block">{{ errors.business_name | first }}</span>
                                    {% endif %}
                                </div>
                            </div>
                            {# FLIMSY STREET NAME #}
                            <div class="col-xs-3">
                                <div class="form-group{{ errors.business_name ? ' has-error' : '' }} required">
                                    <label class="control-label" for="business_name">Street Name</label>
                                    <input type="text" name="business_name" class="form-control" value="{{ var_business_name }}">
                                    {% if errors.business_name %}
                                        <span class="help-block">{{ errors.business_name | first }}</span>
                                    {% endif %}
                                </div>
                            </div>
                            {# FLIMSY SUBURB #}
                            <div class="col-xs-3">
                                <div class="form-group{{ errors.business_name ? ' has-error' : '' }} required">
                                    <label class="control-label" for="business_name">Suburb</label>
                                    <input type="text" name="business_name" class="form-control" value="{{ var_business_name }}">
                                    {% if errors.business_name %}
                                        <span class="help-block">{{ errors.business_name | first }}</span>
                                    {% endif %}
                                </div>
                            </div>
                            {# FLIMSY POSTCODE #}
                            <div class="col-xs-2">
                                <div class="form-group{{ errors.business_name ? ' has-error' : '' }} required">
                                    <label class="control-label" for="business_name">Post Code</label>
                                    <input type="text" name="business_name" class="form-control" value="{{ var_business_name }}">
                                    {% if errors.business_name %}
                                        <span class="help-block">{{ errors.business_name | first }}</span>
                                    {% endif %}
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            {# FLIMSY CLOSEST CROSS ST #}
                            <div class="col-xs-4">
                                <div class="form-group{{ errors.business_name ? ' has-error' : '' }} required">
                                    <label class="control-label" for="business_name">Closest Cross Street</label>
                                    <input type="text" name="business_name" class="form-control" value="{{ var_business_name }}">
                                    {% if errors.business_name %}
                                        <span class="help-block">{{ errors.business_name | first }}</span>
                                    {% endif %}
                                </div>
                            </div>
                            {# WHEREIS SEARCH #}
                            <div class="col-xs-4">
                                <label class="control-label" for="business_name">(Required for Sewer Junction & Main)</label>
                                <a href="">WHEREIS SEARCH</a>
                            </div>
                        </div>
                        <div class="row">
                            {# FLIMSY SEND BY #}
                            <div class="col-xs-2">
                                {% set var_business_type = old.business_type is defined ? old.business_type : member.business_type %}
                                <div class="form-group{{ errors.type ? ' has-error' : '' }}">
                                    <label for="business_type">Send By:</label>
                                    <select class="form-control" name="business_type" id="business_type">
                                        <option value="N" {% if var_business_type == 'N' %} selected="selected"{% endif %}>Choose an Option</option>
                                        <option value="E" {% if var_business_type == 'B' %} selected="selected"{% endif %}>Email</option>
                                        <option value="F" {% if var_business_type == 'I' %} selected="selected"{% endif %}>Fax</option>
                                        <option value="P" {% if var_business_type == 'I' %} selected="selected"{% endif %}>Post</option>
                                        <option value="U" {% if var_business_type == 'I' %} selected="selected"{% endif %}>Pick-Up-</option>
                                    </select>
                                    {% if errors.business_type %}
                                        <span class="help-block">{{ errors.business_type | first }}</span>
                                    {% endif %}
                                </div>
                            </div>
                        </div>

                        <div class="panel panel-default">
                            <div class="panel-body-header-app">MPA FLIMSY INFORMATION</div>
                        </div>

                        <div class="row">
                        {# FLIMSY AVAILABILITY #}
                            <div class="col-xs-4">
                                {% set var_business_type = old.business_type is defined ? old.business_type : member.business_type %}
                                <div class="form-group{{ errors.type ? ' has-error' : '' }}">
                                    <label for="business_type">Availability:</label>
                                    <select class="form-control" name="business_type" id="business_type">
                                        <option value="N" {% if var_business_type == 'N' %} selected="selected"{% endif %}>Select an Option</option>
                                        <option value="B" {% if var_business_type == 'B' %} selected="selected"{% endif %}>Business</option>
                                        <option value="I" {% if var_business_type == 'I' %} selected="selected"{% endif %}>Individual</option>
                                    </select>
                                    {% if errors.business_type %}
                                        <span class="help-block">{{ errors.business_type | first }}</span>
                                    {% endif %}
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            {# FLIMSY DISTRICT #}
                            <div class="col-xs-3">
                                <div class="form-group{{ errors.business_name ? ' has-error' : '' }} required">
                                    <label class="control-label" for="business_name">District:</label>
                                    <input type="text" name="business_name" class="form-control" value="{{ var_business_name }}">
                                    {% if errors.business_name %}
                                        <span class="help-block">{{ errors.business_name | first }}</span>
                                    {% endif %}
                                </div>
                            </div>
                            {# FLIMSY FIELD BOOK #}
                            <div class="col-xs-3">
                                <div class="form-group{{ errors.business_name ? ' has-error' : '' }} required">
                                    <label class="control-label" for="business_name">Field Book:</label>
                                    <input type="text" name="business_name" class="form-control" value="{{ var_business_name }}">
                                    {% if errors.business_name %}
                                        <span class="help-block">{{ errors.business_name | first }}</span>
                                    {% endif %}
                                </div>
                            </div>
                            {# FLIMSY PAGE NUMBER #}
                            <div class="col-xs-1">
                                <div class="form-group{{ errors.business_name ? ' has-error' : '' }} required">
                                    <label class="control-label" for="business_name">Page #:</label>
                                    <input type="text" name="business_name" class="form-control" value="{{ var_business_name }}">
                                    {% if errors.business_name %}
                                        <span class="help-block">{{ errors.business_name | first }}</span>
                                    {% endif %}
                                </div>
                            </div>
                            {# FLIMSY MAP COORDS #}
                            <div class="col-xs-3">
                                <div class="form-group{{ errors.business_name ? ' has-error' : '' }} required">
                                    <label class="control-label" for="business_name">Map Co-Ords:</label>
                                    <input type="text" name="business_name" class="form-control" value="{{ var_business_name }}">
                                    {% if errors.business_name %}
                                        <span class="help-block">{{ errors.business_name | first }}</span>
                                    {% endif %}
                                </div>
                            </div>
                            {# FLIMSY EXTRA NUMBERS #}
                            <div class="col-xs-2">
                                {% set var_business_type = old.business_type is defined ? old.business_type : member.business_type %}
                                <div class="form-group{{ errors.type ? ' has-error' : '' }}">
                                    <label for="business_type">Extra Pages:</label>
                                    <select class="form-control" name="business_type" id="business_type">
                                        <option value="N" {% if var_business_type == 'N' %} selected="selected"{% endif %}>0</option>
                                        <option value="B" {% if var_business_type == 'B' %} selected="selected"{% endif %}>1</option>
                                        <option value="I" {% if var_business_type == 'I' %} selected="selected"{% endif %}>2</option>
                                    </select>
                                    {% if errors.business_type %}
                                        <span class="help-block">{{ errors.business_type | first }}</span>
                                    {% endif %}
                                </div>
                            </div>

                        </div>
                    </form>

                    <div class="pull-right" >

                        <button type="submit" id="submit_member_new" class="btn btn-primary">{{ var_set_save_btn }}</button>

                        <button type="button" class="btn btn-default" id="{{ var_set_save_cancel }}">Cancel</button>

                    </div>

                </div>
            </div>
        </div>
    </div>
{% endblock %}